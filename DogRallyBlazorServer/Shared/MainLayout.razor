@inherits LayoutComponentBase

<PageTitle> Hunde Rally </PageTitle>


<AuthorizeView> @* All within authorized field requires login *@
    <Authorized>
        <div class="page">
            <div class="sidebar">
                <NavMenu />
            </div>

            <main>
                <article class="content px-4">
                    @Body
                </article>
            </main>
        </div>
    </Authorized>
    <NotAuthorized>
        <RedirectToLogin /> @* Redirects user to login page if not authorized *@
    </NotAuthorized>
</AuthorizeView>

